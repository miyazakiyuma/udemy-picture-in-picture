{
    "name": "__MSG_appName__",
    "short_name": "__MSG_appShortName__",
    "description": "__MSG_appDescription__",
    "version": "1.1",
    "manifest_version": 3,
    "default_locale": "en",
    "icons": {
        "16": "images/icon16.png",
        "32": "images/icon32.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "host_permissions": [
        "https://*.udemy.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://*.udemy.com/*"
            ],
            "js": [
                "main.js"
            ]
        }
    ]
}